<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.application.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>
    <ui:with field="page" type="com.arcbees.bourseje.client.resources.PageCandidatesResources"/>

    <g:HTMLPanel styleName="{res.styles.main_section}">
        <w:Header/>

        <section class="{res.styles.main_content}">
            <article>
                <div class="{res.styles.wrapper_desktop} {res.styles.clearfix} {res.styles.txtcenter}">
                    <div class="{page.style.text_intro}">
                        <h2>Les candidats</h2>
                        <p>pour la personnalité d’affaires
                            <span>de l’année 2015</span>
                        </p>
                    </div>
                    <div class="{res.grid.row}">
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Johanie Gagnon</h3>
                            <p>Construction le 5e élément</p>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Dominic Fillion</h3>
                            <p>DFMotion</p>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Raphaël Provost</h3>
                            <p>iWrap</p>
                        </div>
                    </div>
                    <div class="{res.grid.row}">
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Maxime Gagnon</h3>
                            <p>La Raffinerie</p>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Simon Valin</h3>
                            <p>Valin Confection</p>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_4} {page.style.box_candidates}">
                            <g:Image resource="{res.voteAccent}" styleName="{page.style.avatar}"/>
                            <h3>Vincent Bouchard</h3>
                            <p>Venice Gym</p>
                        </div>
                    </div>
                </div>
            </article>
        </section>

        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
