<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>

    <g:HTMLPanel styleName="{res.styles.height}">
        <section>
            <div>
                <article class="{res.styles.wrapper} {res.styles.txtcenter}">
                    <div class="{res.styles.vote}">
                        <g:Image resource="{res.voteClock}"/>
                    </div>
                    <p>Nous sommes désolés<br/>le vote n'est pas encore disponible.
                    </p>
                    <button class="{res.styles.btn} {res.styles.btnRafraichir}">Rafraichir</button>
                </article>
            </div>
        </section>
    </g:HTMLPanel>
</ui:UiBinder>
