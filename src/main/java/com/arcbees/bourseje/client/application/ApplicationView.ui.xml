<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.application">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>

    <ui:style>
        .main {
            height: literal("calc(100% - 185px)");
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.styles.height}">
        <w:Header/>

        <g:SimplePanel styleName="{style.main}" ui:field="main"/>

        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
