<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.application.ui"
             xmlns:svg="urn:import:org.vectomatic.dom.svg.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>

    <g:HTMLPanel styleName="{res.styles.mainSection}">
        <w:Header/>

        <div class="{res.styles.voteHeader}">
            <svg:SVGImage resource="{res.voteHeader}"/>
        </div>
        <section class="{res.styles.main}">
            <article class="{res.styles.wrapper}">
                <p>Vous avez choisi.</p>
                <p class="{res.styles.selection}">
                    <g:InlineLabel ui:field="name"/>
                </p>
                <p class="{res.styles.txtcenter}">Êtes-vous sûr de votre vote ?</p>
                <g:Button ui:field="confirm" styleName="{res.styles.btn} {res.styles.btnConfirm}">Confirmer</g:Button>
            </article>
        </section>

        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
