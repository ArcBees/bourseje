<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.application.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>
    <ui:with field="page" type="com.arcbees.bourseje.client.resources.PageConfirmVoteResources"/>

    <g:HTMLPanel styleName="{res.styles.main_section}">
        <w:Header/>

        <section class="{res.styles.main_content}">
            <article>
                <div class="{res.styles.wrapper} {res.styles.txtcenter}">
                    <div class="{res.styles.text_step}">
                        <h2>Ã‰tape 3</h2>
                        <p>Confirmez votre choix</p>
                    </div>
                    <div class="{page.style.choice_box}">
                        <img ui:field="picture" src="" class="{page.style.choice_avatar}"/>
                        <div class="{page.style.choice_finalist}">
                            <span ui:field="name" class="{page.style.choice_finalist_name}"/>
                            <span ui:field="company" class="{page.style.choice_finalist_company}"/>
                        </div>
                    </div>
                    <g:Button ui:field="confirm" styleName="{res.styles.btn} {res.styles.btn_wide}">C'est mon
                        candidat
                    </g:Button>
                </div>
            </article>
        </section>

        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
