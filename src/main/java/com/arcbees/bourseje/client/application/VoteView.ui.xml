<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.application">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>

    <g:HTMLPanel styleName="{res.styles.height}">
        <w:Header/>

        <section class="{res.styles.main}">
            <div>
                <article class="{res.styles.wrapper}">
                    <p>Choisissez la personnalité d'affaires<br/>de l'année 2015
                    </p>
                    <form action="">
                        <div>
                            <input name="vote" id="Antoine" type="radio"/>
                            <label for="Antoine">Antoine Bisson – POKA Inc.</label>
                        </div>
                        <div>
                            <input name="vote" id="Sarah" type="radio"/>
                            <label for="Sarah">Sarah Baribeau – Bougeotte et placotine</label>
                        </div>
                        <div>
                            <input name="vote" id="Matthias" type="radio"/>
                            <label for="Matthias">Matthias Baudot – Studio BODS</label>
                        </div>
                        <div>
                            <input name="vote" id="Benoit" type="radio"/>
                            <label for="Benoit">Benoit M. Bédard – Les solutions Amotus</label>
                        </div>
                        <div>
                            <input name="vote" id="Jean-François" type="radio"/>
                            <label for="Jean-François">Jean-François Mondou – Jeff Poissonnerie-prêt à mange</label>
                        </div>
                        <div>
                            <input name="vote" id="Simon" type="radio"/>
                            <label for="Simon">Simon Veilleux – 32 MARS</label>
                        </div>
                        <button type="submit" class="{res.styles.btn} {res.styles.btnVote}">VOTE</button>
                    </form>
                </article>
            </div>
        </section>

        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
