<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>

    <g:HTMLPanel styleName="{res.styles.height}">
        <section class="{res.styles.main}">
            <div ui:field="voteGroup">
                <article class="{res.styles.wrapper}">
                    <p>Votez pour la jeune entreprise<br/>de l'année 2014
                    </p>
                    <form action="">
                        <div>
                            <input name="vote" id="Antoine Bisson – POKA Inc." type="radio" checked="true"/>
                            <label for="Antoine Bisson – POKA Inc.">Antoine Bisson – POKA Inc.</label>
                        </div>
                        <div>
                            <input name="vote" id="Sarah Baribeau – Bougeotte et placotine" type="radio"/>
                            <label for="Sarah Baribeau – Bougeotte et placotine">Sarah Baribeau – Bougeotte et
                                placotine
                            </label>
                        </div>
                        <div>
                            <input name="vote" id="Matthias Baudot – Studio BODS" type="radio"/>
                            <label for="Matthias Baudot – Studio BODS">Matthias Baudot – Studio BODS</label>
                        </div>
                        <div>
                            <input name="vote" id="Benoit M. Bédard – Les solutions Amotus" type="radio"/>
                            <label for="Benoit M. Bédard – Les solutions Amotus">Benoit M. Bédard – Les solutions
                                Amotus
                            </label>
                        </div>
                        <div>
                            <input name="vote" id="Jean-François Mondou – Jeff Poissonnerie-prêt à mange" type="radio"/>
                            <label for="Jean-François Mondou – Jeff Poissonnerie-prêt à mange">Jean-François Mondou –
                                Jeff Poissonnerie-prêt à mange
                            </label>
                        </div>
                        <div>
                            <input name="vote" id="Simon Veilleux – 32 MARS" type="radio"/>
                            <label for="Simon Veilleux – 32 MARS">Simon Veilleux – 32 MARS</label>
                        </div>
                        <g:Button ui:field="submit" styleName="{res.styles.btn} {res.styles.btnVote}">VOTE</g:Button>
                    </form>
                </article>
            </div>
        </section>
    </g:HTMLPanel>
</ui:UiBinder>
