<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.arcbees.bourseje.client.admin.ui">

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>
    <ui:with field="page" type="com.arcbees.bourseje.client.resources.PageNumberOfVoteResources"/>
    <ui:with field="modal" type="com.arcbees.bourseje.client.resources.ItemModalboxResources"/>

    <ui:import field="com.arcbees.bourseje.client.NameTokens.*"/>

    <g:HTMLPanel styleName="{res.styles.main_section}">
        <w:Header/>

        <section class="{res.styles.main_content_desktop}">
            <article>
                <div class="{res.styles.wrapper_desktop} {res.styles.clearfix}">
                    <button ui:field="login" class="{res.styles.btn} {page.style.btn_login}">Login</button>

                    <div class="{page.style.text_intro} {res.styles.txtcenter}">
                        <h2>Les candidats</h2>
                        <p>pour la Bourse Jeune Entreprise 2016</p>
                    </div>
                    <div class="{res.grid.row} {res.styles.clearfix}">
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.JohanieGagnon}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Johanie Gagnon</h3>
                                <p>Construction le 5e élément</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="johanieVotes">0</span>
                            </div>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.DominicFillion}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Dominic Fillion</h3>
                                <p>DFMotion</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="dominicVotes">0</span>
                            </div>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.RaphaelProvost}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Raphaël Provost</h3>
                                <p>iWrap</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="raphaelVotes">0</span>
                            </div>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.MaximeGagnon}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Maxime Gagnon</h3>
                                <p>La Raffinerie</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="maximeVotes">0</span>
                            </div>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.SimonValin}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Simon Valin</h3>
                                <p>Valin Confection</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="simonVotes">0</span>
                            </div>
                        </div>
                        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
                            <g:Image resource="{res.VincentBouchard}" styleName="{page.style.avatar}"/>
                            <div class="{page.style.candidates}">
                                <h3>Vincent Bouchard</h3>
                                <p>Venice Gym</p>
                                <div>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                                </div>
                            </div>
                            <div class="{page.style.nb_vote}">
                                <span ui:field="vincentVotes">0</span>
                            </div>
                        </div>
                        <a  href="#{ADD}" class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates} {page.style.box_candidates__button}">
                            <i class="fa fa-plus-circle"></i> Ajouter un candidat
                        </a>
                    </div>

                    <div class="{res.grid.row} {res.styles.clearfix}">
                        <div class="{res.grid.col} {res.grid.col_full} {res.styles.txtcenter} {page.style.buttons}">
                            <p class="{page.style.current_state_text}">
                                <span>Statut du vote :</span>
                                <strong ui:field="currentState"></strong>
                            </p>
                            <button ui:field="inactiveVote" class="{res.styles.btn}">Set as inactive</button>
                            <button ui:field="startVote" class="{res.styles.btn}"><i class="fa fa-play"></i> Démarrer</button>
                            <button ui:field="stopVote" class="{res.styles.btn}"><i class="fa fa-stop"></i> Arrêter</button>
                            <a href="#{WINNER}" class="{res.styles.btn} {page.style.btn_gagnant}"><i class="fa fa-trophy"></i> Voir le gagnant</a>
                        </div>
                    </div>

                </div>
            </article>
        </section>
        <!-- TODO: Hello Oli! It's me, Modal -->
        <div class="{modal.style.modalbox_mask}" style="display:none;"></div>
        <section class="{modal.style.modalbox}" style="display:none;">
            <p class="{modal.style.modalbox__text}">
                Êtes-vous sûr de vouloir supprimer ce candidat de la liste?
            </p>
            <div class="{modal.style.modalbox__buttons}">
                <button class="{res.styles.btn} {res.styles.btn_secondary} {modal.style.modalbox__button}">Non, annuler</button>
                <button class="{res.styles.btn} {res.styles.btn_primary} {modal.style.modalbox__button}">Oui, supprimer</button>
            </div>
        </section>
        <w:Footer/>
    </g:HTMLPanel>
</ui:UiBinder>
