<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.bourseje.client.resources.Resources"/>
    <ui:with field="page" type="com.arcbees.bourseje.client.resources.PageNumberOfVoteResources"/>

    <g:HTMLPanel>
        <div class="{res.grid.col} {res.grid.col_6} {page.style.box_candidates}">
            <g:Image ui:field="image" styleName="{page.style.avatar}"/>
            <div class="{page.style.candidates}">
                <h3 ui:field="name"></h3>
                <p ui:field="company"></p>
                <div>
                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-pencil"></i> Modifier</a>
                    <a href="#" class="{page.style.box_candidates__link}"><i class="fa fa-times-circle"></i> Supprimer</a>
                </div>
            </div>
            <div class="{page.style.nb_vote}">
                <span class="nbVotes">0</span>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>